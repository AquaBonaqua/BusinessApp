<Page x:Class="BusinessApp.PageLogin"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BusinessApp"
      mc:Ignorable="d" 
      d:DesignHeight="520" d:DesignWidth="1150"
      Title="PageLogin">

    <Grid>
        <StackPanel Width="350" HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Vertical">
            <Label FontSize="35" Foreground="#FFA2A2A2">Team:</Label>
            <TextBox FontSize="35" Name="TeamBox" Height="40"/>
            <Label FontSize="35" Foreground="#FFA2A2A2">Password:</Label>
            <PasswordBox FontSize="35" Height="40"/>
            <Button Margin="0 35 0 0" FontSize="25" Foreground="#FFA2A2A2" Height="60" Content="Login in System" Background="#FF373737" />

        </StackPanel>

        <Button HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="35" FontSize="25" Width="200" Height="50" Content="Back" Click="Button_Click"/>

    </Grid>
</Page>
